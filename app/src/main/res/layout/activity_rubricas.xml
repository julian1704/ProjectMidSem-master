<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.uninorte.projectmidsem.rubricas">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"

        android:layout_marginTop="16dp"
        android:text="AGREGAR RUBRICAS"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niveles (L): 4"
        android:layout_marginLeft="152dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"
        android:textColor="#FFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorias"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:layout_marginLeft="143dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número Categorias: "
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:textSize="20dp"
        android:textColor="#FFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="169dp" />
    <EditText
        android:id="@+id/numcat"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:hint="Numero"
        android:inputType="numberDecimal"
        android:textColorHint="#FFF"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="188dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="157dp" />
    <Button
        android:id="@+id/btnaceptarRub"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:text="Aceptar"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="157dp"
        android:layout_marginLeft="221dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        tools:layout_editor_absoluteX="289dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de Rúbrica: "
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="121dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <EditText
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:id="@+id/nombrerubrica"
        android:hint="Nombre"
        android:textColor="@color/colorAccent"
        android:textColorHint="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="199dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:orientation="vertical"
        android:layout_width="375dp"
        android:layout_height="260dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

    </ListView>


</android.support.constraint.ConstraintLayout>